<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">

	<menuitem name="office365-root" title="Office365"
		if="__config__.app.isApp('office365')" icon="fa-windows"
		icon-background="violet" />

	<menuitem name="office365-account" parent="office365-root"
		title="Office365 accounts" action="office365.account" order="1"/>

	<action-view name="office365.account"
		title="Office365 account" model="com.axelor.apps.office.db.Office365Account">
		<view type="grid" name="office365-account-grid" />
		<view type="form" name="office365-account-form" />
	</action-view>

	<menuitem name="office365-contact" parent="office365-root"
		title="Office365 contacts" action="office365.contact" order="5"/>

	<action-view name="office365.contact"
		title="Office365 contacts" model="com.axelor.apps.base.db.Partner">
		<view type="grid" name="partner-grid" />
		<view type="form" name="partner-form" />
		<domain>self.id IN (SELECT partner FROM Office365Partner)</domain>
	</action-view>

	<menuitem name="office365-calendar" parent="office365-root"
		title="Office365 calendars" action="office365.calendar" order="10"/>

	<action-view name="office365.calendar"
		title="Office365 calendars" model="com.axelor.apps.base.db.ICalendar">
		<view type="grid" name="calendar-grid"/>
		<view type="form" name="calendar-form"/>
		<domain>self.id IN (SELECT calendar FROM Office365ICalendar)</domain>
	</action-view>

	<menuitem name="office365-calendar-event" parent="office365-root"
		title="Office365 calendar events" action="office365.calendar.event" order="15"/>

	<action-view name="office365.calendar.event"
		title="Office365 calendar events" model="com.axelor.apps.crm.db.Event">
		<view type="calendar" name="event-calendar-color-by-calendar"/>
		<view type="grid" name="event-grid"/>
		<view type="form" name="event-form"/>
		<domain>self.id IN (SELECT event FROM Office365ICalendarEvent)</domain>
	</action-view>

	<menuitem name="office365-message" parent="office365-root"
		title="Office365 mails" action="office365.message" order="20"/>

	<action-view name="office365.message"
		title="Office365 mails" model="com.axelor.apps.message.db.Message">
		<view type="grid" name="message-grid"/>
		<view type="form" name="message-form"/>
		<domain>self.id IN (SELECT message FROM Office365Message)</domain>
	</action-view>

</object-views>